<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apusart.moviesliblary">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.apusart.MoviesLibraryApplication">
        <activity android:name=".ui.guest.init_activity.InitActivity" android:theme="@style/AppTheme.InitActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.guest.login_activity.LoginActivity" android:theme="@style/AppTheme.LoginTheme" android:screenOrientation="portrait"/>
        <activity android:name=".ui.logged.profile_activity.ProfileActivity"/>
        <activity android:name=".ui.logged.logged_activity.main_activity.MainActivity"/>
    </application>

</manifest>