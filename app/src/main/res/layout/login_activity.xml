<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.apusart.moviesliblary.ui.guest.login_activity.LoginActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.guest.login_activity.LoginActivity"
        android:background="@color/background_white">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_activity_guideline1"
            android:background="@drawable/login_gradient_logo" />

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_activity_guideline1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo_200"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_activity_form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/login_activity_guideline1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/login_activity_email_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                app:cardCornerRadius="100dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/login_activity_password_container"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/login_activity_email_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/user_64"
                        app:tint="@color/grey_1"
                        app:layout_constraintEnd_toStartOf="@id/login_activity_username_text"
                        android:layout_margin="15dp"
                        />
                    <EditText
                        android:id="@+id/login_activity_username_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/login_activity_email_image"
                        android:background="@null"
                        android:textColor="@color/grey_1"
                        android:hint="@string/username_placeholder"
                        android:text="@={viewModel.email}"
                        android:imeOptions="actionNext"
                        android:inputType="textAutoComplete"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/login_activity_password_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                app:cardCornerRadius="100dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/login_activity_email_container"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/login_activity_password_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/key_64"
                        app:layout_constraintEnd_toStartOf="@id/login_activity_password_text"
                        android:layout_margin="15dp"
                        app:tint="@color/grey_1"
                        />
                    <EditText
                        android:id="@+id/login_activity_password_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/login_activity_password_image"
                        android:background="@null"
                        android:textColor="@color/grey_1"
                        android:hint="@string/password_placeholder"
                        android:text="@={viewModel.password}"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/login_activity_process_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutDescription="@xml/login_activity_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_activity_form_container"
            android:theme="@style/AppTheme.LoginTheme.Buttons">
            <Button
                android:id="@+id/login_activity_process_login"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Zaloguj się"

                style="?buttonPrimary"/>
            <ProgressBar
                android:id="@+id/login_activity_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:backgroundTint="@color/primary_900"
                />
        </androidx.constraintlayout.motion.widget.MotionLayout>


        <TextView
            android:id="@+id/login_activity_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Zarejestruj się"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/login_activity_guideline1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>