<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.apusart.moviesliblary.ui.logged.profile_activity.ProfileActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/background_white">
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_background">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_activity_back_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/profile_activity_back_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="20dp"
                    app:tint="@color/white"
                    android:src="@drawable/back_arrow_64"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profile_activity_back_container">
                <LinearLayout
                    android:id="@+id/profile_activity_profile_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/circle_shape"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:id="@+id/profile_activity_profile_photo"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_margin="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_activity_rated_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/circle_shape"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/profile_activity_profile_container">
                    <ProgressBar
                        android:id="@+id/profile_activity_rated_progressbar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:background="@drawable/circle_shape"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="55"
                        android:layout_margin="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_activity_fav_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/circle_shape"
                    app:layout_constraintStart_toEndOf="@id/profile_activity_profile_container"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ProgressBar
                        android:id="@+id/profile_activity_fav_progressbar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:background="@drawable/circle_shape"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="81"
                        android:layout_margin="5dp" />
                </LinearLayout>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/profile_activity_fav_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/favourite"
                    style="@style/CaptionRoboto12PtBlack"
                    app:layout_constraintStart_toEndOf="@id/profile_activity_profile_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/profile_activity_rated_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/rated"
                    style="@style/CaptionRoboto12PtBlack"
                    app:layout_constraintEnd_toStartOf="@id/profile_activity_profile_container"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/profile_activity_profile_container"
                    app:layout_constraintStart_toStartOf="@id/profile_activity_profile_container"
                    app:layout_constraintEnd_toEndOf="@id/profile_activity_profile_container"
                    android:text="@{viewModel.userName}"
                    android:textAppearance="@style/TitleRoboto20Pt"
                    tools:text="MIKEswim145"
                    android:layout_marginTop="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>